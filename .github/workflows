name: Build APK

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          sudo apt update
          sudo apt install -y openssl libffi-dev zlib1g-dev libgl1-mesa-dev
          pip install --upgrade cython buildozer

      - name: Build APK
        run: |
          cd app
          buildozer android debug

      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: bacbo-apk
          path: app/bin/*.apk
